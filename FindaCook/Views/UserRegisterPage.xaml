<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaCook.UserRegisterPage"
             Title="Register">
    <ScrollView>
    <StackLayout Padding="20">
        <Label Text="Register" FontSize="28" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,20,0,20"/>

        <Entry Placeholder="Name" x:Name="NameEntry" Margin="10,30,0,10"/>
        <Entry Placeholder="Email" x:Name="EmailEntry"  TextTransform="None" Margin="10,20,0,10"/>
        <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="10,20,0,10"/>
        <Entry Placeholder="Retype Password" x:Name="RetypePasswordEntry" IsPassword="True" Margin="10,20,0,20"/>

        <Button Text="Register" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        <Button Text="Already have an Account? Login!" FontSize="18" FontAttributes="Bold" Clicked="NavigateToLoginPage" HorizontalOptions="Center" Margin="0,10,0,0"
                Background="Transparent" TextColor="BlueViolet"/>

        <Label x:Name="ResultLabel" Text="" FontSize="16" TextColor="Red" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>
    </StackLayout>
    </ScrollView>
</ContentPage>