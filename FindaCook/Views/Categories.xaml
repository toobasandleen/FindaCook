<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaCook.Categories"
             Title="Categories">
    <ScrollView>
        <VerticalStackLayout>
            <Label FontSize="30" HorizontalOptions="Center" Margin="0,10,0,0" FontAttributes="Bold">Categories</Label>
            <SearchBar Placeholder="Search categories..." PlaceholderColor="BlueViolet" Margin="0" CancelButtonColor ="Black"/>
            <Button Text="Desi" BackgroundColor="RoyalBlue" FontSize="22" HeightRequest="150" LineBreakMode="WordWrap" WidthRequest="150" Margin="0,20,0,0"></Button>
            <Button Text="Chinese Cuisine" BackgroundColor="RoyalBlue" FontSize="22" HeightRequest="150" LineBreakMode="WordWrap" WidthRequest="150" Margin="0,20,0,0"></Button>
            <Button Text="Fast Food" BackgroundColor="RoyalBlue" FontSize="22" HeightRequest="150" WidthRequest="150" LineBreakMode="WordWrap" Margin="0,20,0,0"></Button>
            <Button Text="Western Cuisine" BackgroundColor="RoyalBlue" FontSize="22" HeightRequest="150" WidthRequest="150" Margin="0,20,0,10" LineBreakMode="WordWrap"></Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>